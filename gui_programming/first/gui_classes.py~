from Tkinter import *

class application(Frame):
    
    '''Sets up UI '''
    def __init__(self,master):
        Frame.__init__(self,master)
        self.grid()
        self.create_widgets()

    ''' Creates buttons'''
    def create_widgets(self):
        self.button = Button(self)
        self.button.configure(text = "QUIT",
                              command = self.quit)
        self.button.grid_location(0,0)

#row = 3
#colomn = 3

''' Creating window '''
lottery = Tk()
lottery.title("This is the title")
lottery.geometry("300x300")
application(lottery)
lottery.mainloop()

